# ======================================================================================================================
# STORAGE PATHS (RELATIVE TO /backend)
# ======================================================================================================================

# Path to the JSON user database file
DATABASE_PATH=users_db.json

# Path to the directory where uploaded files are stored
UPLOAD_DIR=uploads

# ======================================================================================================================
# AI MODEL CONFIGURATION
# ======================================================================================================================

# OpenAI model name
OPENAI_MODEL=gpt-4-turbo

# Secret OpenAI API key
OPENAI_API_KEY=your-openai-api-key

# ======================================================================================================================
# SERVER CONFIGURATION
# ======================================================================================================================

# Frontend origins for CORS (JSON array format)
CORS_ORIGINS=["http://localhost:5173"]

# Server port
PORT=8081

# ======================================================================================================================
# FILE UPLOAD CONSTRAINTS
# ======================================================================================================================

# Max file size (megabytes)
MAX_SIZE_MB=10

# Supported file extensions (JSON array format, lowercase, no dots)
SUPPORTED_EXTENSIONS=["pdf","txt"]

# Supported MIME types (JSON array format)
SUPPORTED_MIME_TYPES=["application/pdf","text/plain"]